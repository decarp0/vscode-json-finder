{
  "name": "jsonfinder",
  "displayName": "JSON Finder",
  "description": "Find or Lookup any key value by JSON key path in nested JSON files or find usage location of key.",
  "publisher": "decarp0",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/decarp0/vscode-json-finder"
  },
  "version": "1.0.3",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jsonfinder.findJsonKeyByPath",
        "title": "jsonfinder: Find JSON key and value by path"
      },
      {
        "command": "jsonfinder.findUsageByValue",
        "title": "jsonfinder: Find Usage of Translation Key"
      }
    ],
    "keybindings": [
      {
        "command": "jsonfinder.findJsonKeyByPath",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorTextFocus && resourceLangId != json"
      },
      {
        "command": "jsonfinder.findUsageByValue",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorTextFocus && resourceLangId == json"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "jsonfinder.findUsageByValue",
          "when": "resourceLangId == json",
          "group": "navigation"
        },
        {
          "command": "jsonfinder.findJsonKeyByPath",
          "when": "resourceLangId != json",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "jsonc-parser": "^3.3.1"
  }
}
